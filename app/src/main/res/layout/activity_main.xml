<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/main_layout_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:orientation="horizontal"
        android:padding="2dp"
        android:useDefaultMargins="true"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/main_button_clear"
            android:layout_height="90dp"
            android:text="c"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_divide"
            android:layout_height="90dp"
            android:text="/"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_multiple"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_erase"
            android:layout_height="90dp"
            android:text="er"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_1"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_2"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_3"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_minus"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_4"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_5"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_6"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_plus"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_7"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_8"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_9"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_equal"
            android:layout_height="90dp"
            android:text="="
            android:textSize="35sp"
            android:layout_gravity="fill_vertical"
            android:layout_rowSpan="2"
            />
        <Button
            android:id="@+id/main_button_modulo"
            android:layout_height="90dp"
            android:text="%"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_0"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="35sp"
            />
        <Button
            android:id="@+id/main_button_coma"
            android:layout_height="90dp"
            android:text=","
            android:textSize="35sp"
            />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>